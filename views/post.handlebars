<div class='row'>
  <div class='col-auto'>
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class='jumbotron jumbotron-fluid'>
  <div class='container'> 
  <h3>Create a New Post!</h3>

  <form class='form new-post-form'>
    {{! <div class="form-group">
        <label for="post-name">Type here:</label>
        <input class="form-input" type="text" id="post-name" name="post-name" />
      </div> }}
    <div class='form-group'>
      <label for='post-name'>Topic:</label>
      <input type='text' class='form-input' id='post-name' name='post-name' />
    </div>
    {{! <div class='form-group'>
        <label for='post-desc'>Comments:</label>
        <textarea class='form-input' id='post-desc' name='post-desc'></textarea>
      </div> }}
    <div class='form-group'>
      <label for='post-desc'>Comments:</label>
      <input type='text' class='form-input' id='post-desc' />
    </div>
    <div class='form-group'>
      <button type='submit' class='btn btn-success'>Post</button>
    </div>
  </form>
  {{! </div> }}

  {{#if posts.length}}
    <div class='jumbotron jumbotron-fluid'>
    <div class="container"> 
    <h3>Current posts:</h3>

    {{#each posts as |post|}}
      <div class='row mb-2'>
        <div class='col-md-8'>
          <h4><a href='/post/{{post.id}}'>{{post.name}}</a></h4>
        </div>
        <div class='col-md-4'>
          <button
            class='btn btn-sm btn-danger'
            data-id='{{post.id}}'
          >DELETE</button>
        </div>
      </div>
    {{/each}}
    </div>
  {{/if}}
  </div>
</div>

<script src='./js/post.js'></script>